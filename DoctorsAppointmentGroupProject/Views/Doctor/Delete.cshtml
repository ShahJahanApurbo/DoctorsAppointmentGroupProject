@model DoctorsAppointmentGroupProject.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="row">
    <div class="col-md-8">
        <h2 class="text-danger">Delete Doctor</h2>
        
        <div class="alert alert-warning">
            <h4><i class="fas fa-exclamation-triangle me-2"></i>Are you sure you want to delete this doctor?</h4>
            <p class="mb-0">This action cannot be undone. All associated data will be permanently removed.</p>
        </div>

        <div class="card">
            <div class="card-header bg-light">
                <h4 class="mb-0">
                    <i class="fas fa-user-md me-2"></i>@Model.FirstName @Model.LastName
                    <span class="badge @(Model.Status == DoctorsAppointmentGroupProject.Models.DoctorStatus.Active ? "bg-success" : 
                                       Model.Status == DoctorsAppointmentGroupProject.Models.DoctorStatus.Inactive ? "bg-secondary" : "bg-danger") ms-2">
                        @Model.Status
                    </span>
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.FirstName):</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.FirstName)</dd>
                            
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.LastName):</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.LastName)</dd>
                            
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Specialization):</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.Specialization)</dd>
                            
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Email):</dt>
                            <dd class="col-sm-7">
                                <a href="mailto:@Model.Email" class="text-decoration-none">@Html.DisplayFor(model => model.Email)</a>
                            </dd>
                            
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Phone):</dt>
                            <dd class="col-sm-7">
                                <a href="tel:@Model.Phone" class="text-decoration-none">@Html.DisplayFor(model => model.Phone)</a>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.LicenseNumber):</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.LicenseNumber)</dd>
                            
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Status):</dt>
                            <dd class="col-sm-7">
                                <span class="badge @(Model.Status == DoctorsAppointmentGroupProject.Models.DoctorStatus.Active ? "bg-success" : 
                                                   Model.Status == DoctorsAppointmentGroupProject.Models.DoctorStatus.Inactive ? "bg-secondary" : "bg-danger")">
                                    @Html.DisplayFor(model => model.Status)
                                </span>
                            </dd>
                            
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.ConsultationFee):</dt>
                            <dd class="col-sm-7">
                                <strong class="text-success">@Model.ConsultationFee.ToString("C")</strong>
                            </dd>
                        </dl>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.EducationalInfo))
                {
                    <hr />
                    <div class="mb-3">
                        <h6 class="text-muted">@Html.DisplayNameFor(model => model.EducationalInfo)</h6>
                        <p class="small">@Html.DisplayFor(model => model.EducationalInfo)</p>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.CareerInfo))
                {
                    <div class="mb-3">
                        <h6 class="text-muted">@Html.DisplayNameFor(model => model.CareerInfo)</h6>
                        <p class="small">@Html.DisplayFor(model => model.CareerInfo)</p>
                    </div>
                }
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <form asp-action="Delete" method="post" class="d-inline">
                <input asp-for="DoctorID" type="hidden" />
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this doctor? This action cannot be undone.')">
                    <i class="fas fa-trash me-2"></i>Delete Doctor
                </button>
            </form>
            <a asp-action="Details" asp-route-id="@Model.DoctorID" class="btn btn-info">
                <i class="fas fa-eye me-2"></i>View Details
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
    
    <!-- Side panel with additional information -->
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Deletion Information</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <small>
                        <strong>Warning:</strong> Deleting this doctor will:
                        <ul class="mb-0 mt-2">
                            <li>Permanently remove their profile</li>
                            <li>Remove all associated data</li>
                            <li>Cancel any future appointments</li>
                            <li>This action cannot be undone</li>
                        </ul>
                    </small>
                </div>
                
                <div class="mt-3">
                    <h6>Alternative Actions:</h6>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.DoctorID" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-edit me-2"></i>Edit Instead
                        </a>
                        @if (Model.Status == DoctorsAppointmentGroupProject.Models.DoctorStatus.Active)
                        {
                            <button class="btn btn-outline-secondary btn-sm" disabled>
                                <i class="fas fa-pause me-2"></i>Deactivate Instead
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Doctor Summary</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-12 mb-2">
                        <div class="border rounded p-2">
                            <div class="h5 mb-0 text-primary">@Model.DoctorID</div>
                            <small class="text-muted">Doctor ID</small>
                        </div>
                    </div>
                </div>
                <div class="row text-center mt-2">
                    <div class="col-6">
                        <div class="border rounded p-2">
                            <div class="h6 mb-0 text-success">@Model.ConsultationFee.ToString("C0")</div>
                            <small class="text-muted">Fee</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-2">
                            <div class="h6 mb-0 @(Model.Status == DoctorsAppointmentGroupProject.Models.DoctorStatus.Active ? "text-success" : "text-danger")">
                                @Model.Status
                            </div>
                            <small class="text-muted">Status</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add confirmation dialog for extra safety
        document.querySelector('form[asp-action="Delete"] button[type="submit"]').addEventListener('click', function(e) {
            if (!confirm('⚠️ FINAL WARNING: Are you absolutely sure you want to delete Dr. @Model.FirstName @Model.LastName? This action is permanent and cannot be undone!')) {
                e.preventDefault();
            }
        });
        
        // Add some visual feedback
        document.querySelector('form[asp-action="Delete"] button[type="submit"]').addEventListener('mouseover', function() {
            this.classList.add('shadow');
        });
        
        document.querySelector('form[asp-action="Delete"] button[type="submit"]').addEventListener('mouseout', function() {
            this.classList.remove('shadow');
        });
    </script>
}