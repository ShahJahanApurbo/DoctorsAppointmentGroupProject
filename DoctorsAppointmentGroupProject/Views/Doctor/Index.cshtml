@model IEnumerable<DoctorsAppointmentGroupProject.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Doctors</h2>
    <a asp-action="Create" class="btn btn-primary">Create New Doctor</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Specialization)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.ConsultationFee)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>
                        <span class="badge @(item.Status == DoctorsAppointmentGroupProject.Enums.DoctorStatus.Active ? "bg-success" : 
                                           item.Status == DoctorsAppointmentGroupProject.Enums.DoctorStatus.Inactive ? "bg-secondary" : "bg-danger")">
                            @Html.DisplayFor(modelItem => item.Status)
                        </span>
                    </td>
                    <td>@item.ConsultationFee.ToString("C")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.DoctorID" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.DoctorID" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.DoctorID" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>No doctors found</h4>
        <p>Get started by <a asp-action="Create">creating a new doctor</a>.</p>
    </div>
}
