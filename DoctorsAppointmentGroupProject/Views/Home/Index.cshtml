@{
    ViewBag.Title = "DataTables Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DataTables Demo</h2>

<table id="demoTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Tiger Nixon</td>
            <td>System Architect</td>
            <td>Edinburgh</td>
            <td>61</td>
        </tr>
        <tr>
            <td>Garrett Winters</td>
            <td>Accountant</td>
            <td>Tokyo</td>
            <td>63</td>
        </tr>
        <tr>
            <td>Ashton Cox</td>
            <td>Junior Technical Author</td>
            <td>San Francisco</td>
            <td>66</td>
        </tr>
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
            $('#demoTable').DataTable();
        });
    </script>
}
