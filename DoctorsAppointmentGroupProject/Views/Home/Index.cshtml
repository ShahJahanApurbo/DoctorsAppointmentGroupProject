@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="jumbotron bg-primary text-white p-5 rounded mb-4">
            <h1 class="display-4">Doctor Appointment Management System</h1>
            <p class="lead">Manage doctors, appointments, and patient information efficiently.</p>
            <hr class="my-4 bg-light">
            <p>Get started by managing your doctors or exploring the system features.</p>
        </div>
    </div>
</div>

<div class="row">
    <!-- Doctors Management Card -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 shadow">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-md me-2"></i>Doctors Management
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">Manage doctor profiles, specializations, and availability.</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>View all doctors</li>
                    <li><i class="fas fa-check text-success me-2"></i>Add new doctors</li>
                    <li><i class="fas fa-check text-success me-2"></i>Edit doctor information</li>
                    <li><i class="fas fa-check text-success me-2"></i>Manage doctor status</li>
                </ul>
            </div>
            <div class="card-footer">
                <div class="btn-group w-100" role="group">
                    <a asp-controller="Doctor" asp-action="Index" class="btn btn-success">View All</a>
                    <a asp-controller="Doctor" asp-action="Create" class="btn btn-outline-success">Add New</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointments Card (Future Feature) -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 shadow">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>Appointments
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">Schedule and manage patient appointments with doctors.</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-clock text-info me-2"></i>Schedule appointments</li>
                    <li><i class="fas fa-clock text-info me-2"></i>View calendar</li>
                    <li><i class="fas fa-clock text-info me-2"></i>Manage bookings</li>
                    <li><i class="fas fa-clock text-info me-2"></i>Send reminders</li>
                </ul>
            </div>
            <div class="card-footer">
                <button class="btn btn-info w-100" disabled>Coming Soon</button>
            </div>
        </div>
    </div>

    <!-- Patients Card (Future Feature) -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 shadow">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title mb-0">
                    <i class="fas fa-users me-2"></i>Patients
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">Manage patient records and medical histories.</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-user text-warning me-2"></i>Patient profiles</li>
                    <li><i class="fas fa-user text-warning me-2"></i>Medical history</li>
                    <li><i class="fas fa-user text-warning me-2"></i>Contact information</li>
                    <li><i class="fas fa-user text-warning me-2"></i>Insurance details</li>
                </ul>
            </div>
            <div class="card-footer">
                <button class="btn btn-warning w-100" disabled>Coming Soon</button>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Doctor" asp-action="Create" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-2"></i>Add New Doctor
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Doctor" asp-action="Index" class="btn btn-outline-primary w-100">
                            <i class="fas fa-list me-2"></i>View All Doctors
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <button class="btn btn-outline-secondary w-100" disabled>
                            <i class="fas fa-calendar me-2"></i>Schedule Appointment
                        </button>
                    </div>
                    <div class="col-md-3 mb-2">
                        <button class="btn btn-outline-secondary w-100" disabled>
                            <i class="fas fa-user-plus me-2"></i>Add New Patient
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#demoTable').DataTable();
        });
    </script>
}
